
.activityBox{
	width: 100%;
	border-radius: 5px;
	-webkit-box-shadow: 10px;
	        box-shadow: 10px;
}
.borderBottomLine{
	border-bottom: 1px solid #E6E6E6;
}
.activityBox_title{
	padding: 20rpx 10rpx 20rpx 20rpx;
	margin: 0 5px;
	font-size: 28rpx;
	font-weight: 600;
	color:#3e3e3e;
	border-bottom: 1px solid #E6E6E6;
}
.activityBox_title button{
	display: inline-block;
	height: 100%;
	font-size: 26rpx;
	line-height: 100%;
	background: #fff;
	border: none;
	float: right;
}
.activityBox_title button image{
	width: 30rpx;
	height: 30rpx;
	padding-right: 10rpx;
}
.activityBox_title button::after{
	border: none;
}
.activityBox_listItem{
	padding: 20rpx 5%;
	overflow: hidden;
}
.flexbox{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
}
.flexItem{
	width: 50%;
}
.itemImage{
	position: relative;
	margin:0 15rpx;
}
.itemImage image{
	width: 100%;
	height: 200rpx;
	border-radius: 25rpx;
}
.itemImage .club{
	position: absolute;
	right: 0;
	bottom: 3%;
	background: #000000;
	color: #FFFFFF;
	font-size: 30rpx;
	padding:7rpx 10rpx;
	border-radius: 5rpx;
	opacity:0.7;
	font-size: 25rpx;
	border-radius: 15rpx 0 25rpx 0;
}
.itemContent{
	padding:0 15rpx;
}
.itemTitle{
	font-size: 30rpx;
	font-weight: 900;
}
.itemTime{
	font-size: 25rpx;
	color:#3E3E3E;
	padding:11rpx 0 0 0;
}
.itemFooter button{
}
.itemFooter image{
	width: 50rpx;
	height: 50rpx;
	margin: 10rpx 10rpx;
	border-radius: 50rpx;
}
.itemFooter .baoming{
	display: inline-block;
	width: 50rpx;
	height: 50rpx;
	margin: 10rpx 10rpx;
	position: absolute;
	border-radius: 50rpx;
	background: #c9c3c3;
	color: #fff;
	font-size: 25rpx;
	text-align: center;
	line-height: 50rpx;
}
.itemFooter .yibaoming{
	display: inline-block;
	height: 50rpx;
	
	position: absolute;
	color: #8E8E8E;
	font-size: 25rpx;
	text-align: center;
	line-height: 50rpx;
}
.itemFooter button{
	display: inline-block;
	float: right;
	height: 50rpx;
	background: #FC8902;
	font-size: 25rpx;
	text-align: center;
	line-height: 50rpx;
	color: #fff;
}
.itemFooter button::after{
	border: none;
}
.listIcon{
	width:25rpx;
	height: 25rpx;
	padding-right:10rpx;
	padding-top: 10rpx;
}
.marginTop{
	margin-top:7px;
}

